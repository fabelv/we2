<form action="/random" method="post" class="random-form">
    <h2>Generate Random Numbers</h2>
    <div class="form-group">
        <label for="count">Number of random numbers:</label>
        <input type="number" id="count" name="count" value="10">
    </div>
    <div class="form-group">
        <label for="min">Minimum:</label>
        <input type="number" id="min" name="min" value="0">
    </div>
    <div class="form-group">
        <label for="max">Maximum:</label>
        <input type="number" id="max" name="max" value="10">
    </div>
    <input type="submit" value="Generate" class="btn">
</form>
